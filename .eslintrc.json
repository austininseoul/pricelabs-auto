{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "double"],
    "indent": ["warn", 2],
    "comma-dangle": ["warn", "never"]
  },
  "ignorePatterns": ["node_modules/**", "dist/**"],
  "globals": {
    "document": "readonly",
    "window": "readonly"
  }
} 